#:kivy 1.0

<FloatLayout>:
    Image:
        pos: root.pos
        size: root.size
        source: "gui/bg_02.jpg"
        allow_stretch: True
        keep_ratio: False

    Label:
        text: app.time
        size_hint: 0.3,0.2
        pos_hint: {'center_x': .5, 'center_y': .5}
        #pos: root.height/2, root.width/2
        font_size: 48
        bold: True

    Label:
        text: app.date
        size_hint: 0.2,0.2
        font_size: 16
        pos_hint: {"right":1, "top":1}

    Label:
        text: app.traffic
        size_hint: 0.6,0.3
        font_size: 12
        pos_hint: {"left":1, "top":1}
        halign: 'left'
        valign: 'top'

    Button:
        size_hint: 0.03,0.05
        pos_hint: {"right":1, "bottom":1}
        text: "x"
        color: 1,0,0,1
        font_size: 16
        on_press: app.closeApp()